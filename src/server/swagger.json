{
	"swagger": "2.0",
	"info": {
		"title": "Message In A Bottle API",
		"description": "API for storing and retrieving messages",
		"version": "1.0"
	},
	"produces": [
		"application/json"
	],
	"basePath": "/api",
	"paths": {
		"/signup": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "signup",
				"tags": [
					"/signup"
				],
				"description": "Creates a new user",
				"parameters": [
					{
						"name": "userinfo",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"required": [
								"username",
								"password"
							],
							"properties": {
								"username": {
									"type": "string"
								},
								"password": {
									"type": "string"
								}
							}
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/userLogin": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "userLogin",
				"tags": [
					"/userLogin"
				],
				"description": "Login as an existing user.",
				"parameters": [
					{
						"name": "userinfo",
						"in": "body",
						"required": true,
						"schema": {
							"type": "object",
							"required": [
								"username",
								"password"
							],
							"properties": {
								"username": {
									"type": "string",
									"example": "nik"
								},
								"password": {
									"type": "string",
									"example": "password"
								}
							}
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/userLogout": {
			"post": {
				"x-swagger-router-controller": "login",
				"operationId": "userLogout",
				"tags": [
					"/userLogout"
				],
				"description": "Logout user.",
				"parameters": [],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request.",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/messages": {
			"get": {
				"x-swagger-router-controller": "messages",
				"operationId": "messages",
				"tags": [
					"/messages"
				],
				"description": "Get all messages near a location.",
				"parameters": [
					{
						"name": "lon",
						"in": "query",
						"required": true,
						"type": "number",
						"minimum": -180.0,
						"maximum": 180.0,
						"default": -81.1997889146089
					},
					{
						"name": "lat",
						"in": "query",
						"required": true,
						"type": "number",
						"minimum": -90.0,
						"maximum": 90.0,
						"default": 28.602251226391626
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "return array of message objects",
						"schema": {
							"$ref": "#/definitions/MessageList"
						}
					}
				}
			}
		},
		"/message/{id}": {
			"get": {
				"x-swagger-router-controller": "messages",
				"operationId": "getMessage",
				"tags": [
					"/message"
				],
				"description": "Get a message.",
				"parameters": [
					{
						"in": "path",
						"name": "id",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "return a message object",
						"schema": {
							"$ref": "#/definitions/Message"
						}
					}
				}
			},
			"patch": {
				"x-swagger-router-controller": "messages",
				"operationId": "patchMessage",
				"tags": [
					"/message"
				],
				"description": "Get a message.",
				"parameters": [
					{
						"in": "path",
						"name": "id",
						"required": true,
						"type": "string"
					},
					{
						"in": "body",
						"name": "message",
						"required": true,
						"schema": {
							"$ref": "#/definitions/Message"
						}
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "return the patched message object",
						"schema": {
							"$ref": "#/definitions/Message"
						}
					}
				}
			},
			"delete": {
				"x-swagger-router-controller": "messages",
				"operationId": "deleteMessage",
				"tags": [
					"/message"
				],
				"description": "Get a message.",
				"parameters": [
					{
						"in": "path",
						"name": "id",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "Successful request",
						"schema": {
							"$ref": "#/definitions/Success"
						}
					}
				}
			}
		},
		"/message": {
			"post": {
				"x-swagger-router-controller": "messages",
				"operationId": "postMessage",
				"tags": [
					"/message"
				],
				"description": "Create a new message.",
				"parameters": [
					{
						"in": "query",
						"name": "searchInfo",
						"required": true,
						"type": "string"
					}
				],
				"responses": {
					"default": {
						"description": "Invalid request.",
						"schema": {
							"$ref": "#/definitions/Error"
						}
					},
					"200": {
						"description": "return the message created",
						"schema": {
							"$ref": "#/definitions/Message"
						}
					}
				}
			}
		}
	},
	"definitions": {
		"ObjectID": {
			"properties": {
				"_id": {
					"type": "string",
					"example": "5c78b456fd1441656500d212"
				}
			},
			"required": [
				"_id"
			]
		},
		"LongLatArray": {
			"type": "array",
			"items": {
				"type": "number",
				"minItems": 2,
				"maxItems": 2
			},
			"example": [
				-81.1997889146089,
				28.602251226391626
			]
	},
		"MessageContents": {
			"type": "object",
			"properties": {
				"feature": {
					"$ref": "#/definitions/MessageFeature"
				}
			},
			"required": [
				"feature"
			]
		},
		"MessageList": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/Message"
			}
		},
		"MessageFeature": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"Feature"
					]
				},
				"properties": {
					"type": "object",
					"properties": {
						"text": {
							"type": "string",
							"example": "I am in charge of my life"
						},
						"category": {
							"type": "string",
							"enum": [
								"Confidence",
								"Entrepreneurship",
								"Forgiveness",
								"Health",
								"Success",
								"Self-worth",
								"Productivity",
								"Challenges",
								"Money",
								"Love",
								"Leadership",
								"Happiness",
								"Gratitude",
								"Breaking Bad Habits",
								"General"
							],
							"example": "Confidence"
						},
						"date": {
							"type": "string",
							"format": "date",
							"example": "2019-03-04"
						}
					},
					"required": [
						"text",
						"category"
					]
				},
				"geometry": {
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"Point"
							]
						},
						"coordinates": {
							"$ref": "#/definitions/LongLatArray"
						}
					},
					"required": [
						"type",
						"coordinates"
					]
				}
			},
			"required": [
				"type",
				"properties",
				"geometry"
			]
		},
		"Message": {
			"type": "object",
			"allOf": [
				{
					"$ref": "#/definitions/MessageContents"
				},
				{
					"type": "object",
					"properties": {
						"creator": {
							"$ref": "#/definitions/ObjectID"
						}
					},
					"required": [
						"creator"
					]
				},
				{
					"$ref": "#/definitions/ObjectID"
				}
			]
		},
		"Success": {
			"properties": {
				"message": {
					"type": "string"
				}
			},
			"required": [
				"message"
			]
		},
		"Error": {
			"properties": {
				"message": {
					"type": "string"
				}
			},
			"required": [
				"message"
			]
		}
	}
}